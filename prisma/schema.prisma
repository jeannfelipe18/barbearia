// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuário (Cliente, Barbeiro ou Admin)
// Usado pelo Next-Auth e para clientes que agendam
model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  hashedPassword  String? // Para login com email/senha
  role            Role      @default(USER) // Nível de acesso

  // Relacionamentos do Next-Auth
  accounts Account[]
  sessions Session[]
  
  // Relacionamentos do Negócio
  bookings Booking[] // Agendamentos feitos por este usuário (como cliente)
  barber   Barber?   // Perfil de barbeiro (se o role for BARBER)
}

enum Role {
  USER
  BARBER
  ADMIN
}

// Perfil específico do Barbeiro
// Um usuário com role BARBER terá um perfil Barber associado
model Barber {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  bio           String?
  services      Service[]     // Serviços que este barbeiro oferece
  bookings      Booking[]     // Agendamentos deste barbeiro
  availabilities Availability[] // Horários de trabalho deste barbeiro
}

// Serviços oferecidos por um Barbeiro
model Service {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Decimal  @db.Decimal(10, 2)
  duration    Int // Duração em minutos

  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])
  
  bookings Booking[]
}

// Agendamento feito por um cliente
model Booking {
  id     String   @id @default(cuid())
  date   DateTime // Data e hora do agendamento

  userId String // O cliente que agendou
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  barberId String // O barbeiro que foi agendado
  barber   Barber @relation(fields: [barberId], references: [id], onDelete: Cascade)

  serviceId String // O serviço agendado
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  status BookingStatus @default(CONFIRMED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  COMPLETED
}

// Disponibilidade (horários de trabalho do barbeiro)
model Availability {
  id        String @id @default(cuid())
  dayOfWeek Int // 0 (Domingo) - 6 (Sábado)
  startTime String // Formato "HH:mm"
  endTime   String // Formato "HH:mm"

  barberId String
  barber   Barber @relation(fields: [barberId], references: [id])
}


// --- Modelos Obrigatórios do Next-Auth ---

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? @db.Text
  session_state            String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}